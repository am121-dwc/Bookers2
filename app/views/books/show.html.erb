<div class="main container mt-3">
  <div class="row justify-content-center d-flex">
    <div class="col-md-3">

      <%= render 'users/show', user: @user %>

      <%= render 'new', book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>

          <tr class"row">
            <th class="col-md-4 col-sm-4"></th>
            <th class="col-md-2 col-sm-2"></th>
            <th class="col-md-2 col-sm-2"></th>
            <th class="col-md-2 col-sm-2"></th>
            <th class="col-md-2 col-sm-2"></th>
          </tr>

        </thead>
        <tbody>

          <tr>
            <th>
              <%= link_to @book.user do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= @book.user.name %>
              <% end %>
            </th>
            <th>
              <%= link_to @book do %>
              <%= @book.title %>
              <% end %>

            </th>
            <th>
              <%= @book.body %>
            </th>
            <th>
              <% if @book.user == current_user %>
              <button class="btn btn-success">
                <%= link_to "Edit", edit_book_path(@book.id), class: "text-light text-decoration-none" %>
              </button>
              <% end %>
            </th>
            <th>
              <% if @book.user == current_user %>
              <button class="btn btn-danger">
                <%= link_to "Destroy", book_path(@book), class:"text-light text-decoration-none", method: :delete, "data-confirm" => "Are you sure?" %>
              </button>
              <% end %>


            </th>
          </tr>



        </tbody>
      </table>

    </div>
  </div>
</div>
