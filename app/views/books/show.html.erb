<div>
  <%= image_tag @book.get_image %>
  <p>Title<br><%= @book.title %></p>
  <p>Opinion<br><%= @book.body %></p>
  <p><%= @book.user.name %></p>
  <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %> &nbsp;|&nbsp; <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
  <% end %>
</div>