<div class="main container mt-3">
  <div class="row justify-content-center d-flex">
    <div class="col-md-3">

      <%= render 'users/show', user: @user %>

      <%= render 'books/new',book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table-hover">
        <thead>

          <tr>
            <th class="col-md-2 col-sm-2"></th>
            <th class="col-md-4 col-sm-4">Title</th>
            <th class="col-md-6 col-sm-6">Opinion</th>
          </tr>
        </thead>
        <tbody>


           <% @books.each do |book| %>

          <tr>



            <th class="p-2 col-md-2 col-sm-2">
              <%= link_to book.user do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>

            </th>
            <th class="col-md-4 col-sm-4">
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </th>
            <th class="col-md-6 col-sm-6"><%= book.body %></th>
          </tr>


          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
