<div class="container mt-5">
  <div class="row">
    <div class="col-2"></div>
      <div class="col-8">
          <h2>Editing Book</h2>
          <%= form_with model: @book do |f| %>

          <p>Title</p>
          <div class="input-group input-group-sm mb-3"><%= f.text_field :title %></div>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <br>
          <%= f.submit 'Update Book' %>
          <br>
          <%= link_to "Show", book_path(@book.id) %> &nbsp;|&nbsp; <%= link_to "Back", books_path %>

          <% end %>
      </div>
    <div class="col-2"></div>
  </div>
</div>