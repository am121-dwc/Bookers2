<!--新規投稿投稿フォーム-->

  <h2>New book</h2>

    <%= form_with model: Book.new, url: '/books', method: :post do |f| %>
    <div class="form-group">
      <p>Title</p>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">

      <p>Opinion</p>
      <%= f.text_area :body, class: "form-control" %><br>

      <button class="btn btn-success" type="submit">
        Create Book
      </button>

      <% end %>
    </div>