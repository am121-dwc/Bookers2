<!--新規投稿投稿フォーム-->

  <h2>New book</h2>

    <%= form_with model: Book.new, url: '/books', method: :post do |f| %>
    <div class="form-group">
      <h4>Title</h4>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">

      <h4>Opinion</h4>
      <%= f.text_area :body, class: "form-control" %><br>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>