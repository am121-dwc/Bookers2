<div class="container mt-5">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <%= form_with model: @user do |f| %>
       <div class="form-group">
         <p>Name</p>

         <%= f.text_field :name, class: "form-control" %>
       </div>

       <label for="inputImage">Image</label><br>
       <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %><br>

        <div class="form-group mt-3">
          <p>Introduction</p>
          <%= f.text_field :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class:'btn btn-secondary' %>
        </button>
       <% end %>









    </div>
    <div class="col-2"></div>
  </div>
</div>