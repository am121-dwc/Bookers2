<div class="main container mt-3">
  <div class="row justify-content-center d-flex">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
       <table class="table">
        <thead>
          <tr>
            <th class="col-6 col-lg-6">Name</th>
            <th class="col-6 col-lg-6"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="col-6 col-lg-6">Introduction</td>
            <td class="col-6 col-lg-6"><%= @user.introduction %></td>

          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user), class: "text-dark" do %>
      <button class="form-control fas_button_borderradius btn-block">
      <i class="fa-solid fa-user-gear"></i>
      </button>
      <% end %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <div class="row">
        <table class="table table-hover">
          <thead>

            <tr class"row">
              <th class="col-md-3 col-sm-3"></th>
              <th class="col-md-4 col-sm-4">Title</th>
              <th class="col-md-5 col-sm-5">Opinion</th>
            </tr>
          </thead>
          <tbody>


           <% @books.each do |book| %>

            <tr>



              <th>
              <%= link_to book.user do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
              </th>
              <th>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </th>
              <th><%= book.body %></th>
            </tr>


            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
